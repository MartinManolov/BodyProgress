@section Scripts {
    <script>
        var counter = 0;

        function addRow() {
            var table = document.getElementById("AddSetsTable");
            var row = table.insertRow(+1);

            var cell1 = row.insertCell(0);
            var cell2 = row.insertCell(1);
            var cell3 = row.insertCell(2);
            var cell4 = row.insertCell(3);
            var cell5 = row.insertCell(4);
            var cell6 = row.insertCell(5);

            cell1.innerHTML = '<input type="text" name="FoodsWithQuantities[' + counter + '].FoodName"/>';
            cell2.innerHTML = '<input type="text" name="FoodsWithQuantities[' + counter + '].Quantity"/>';
            cell3.innerHTML = '<input type="text" name="FoodsWithQuantities[' + counter + '].KcalPer100g"/>';
            cell4.innerHTML = '<input type="text" name="FoodsWithQuantities[' + counter + '].CarbsPer100g"/>';
            cell5.innerHTML = '<input type="text" name="FoodsWithQuantities[' + counter + '].ProteinPer100g"/>';
            cell6.innerHTML = '<input type="text" name="FoodsWithQuantities[' + counter + '].FatPer100g"/>';
            counter++;
        }
    </script>
}