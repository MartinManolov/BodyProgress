@model BodyProgress.Web.ViewModels.ViewInputModels.MealInputModel
<h1>Add Meal</h1>

<h4>Workout</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MealName" class="control-label"></label>
                <input asp-for="MealName" class="form-control" />
                <span asp-validation-for="MealName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <button onclick="addRow()" type="button">Add Set</button>
            <table id="AddSetsTable" style="width:100%">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FoodsWithQuantities[0].FoodName)</th>
                    <th>@Html.DisplayNameFor(model => model.FoodsWithQuantities[0].Quantity)</th>
                    <th>@Html.DisplayNameFor(model => model.FoodsWithQuantities[0].KcalPer100g)</th>
                    <th>@Html.DisplayNameFor(model => model.FoodsWithQuantities[0].CarbsPer100g)</th>
                    <th>@Html.DisplayNameFor(model => model.FoodsWithQuantities[0].ProteinPer100g)</th>
                    <th>@Html.DisplayNameFor(model => model.FoodsWithQuantities[0].FatPer100g)</th>
                </tr>
            </table>
            <div class="form-group">
                <button onclick="addRow()" type="button" class="btn-warning">Add Set</button>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>




