@model ICollection<BodyStatisticViewModel>
<div class="container-fluid shadow-lg p-3 mb-5 bg-white rounded">
    <h1 class="text-center">Body measurements</h1>
    @if (Model.Count == 0)
    {
        <p class="text-center text-info">Doesn't have body measurments.</p>
    }
    else
    {


        @foreach (var bodyStatistic in Model)
        {
            <div class="shadow-lg p-3 mb-5 bg-white rounded">
                <p class="text-muted">@bodyStatistic.Date</p>
                <table class="tab-content" style="width: 100%" border-spacing: 5px;>
                    <colgroup>
                    </colgroup>
                    <tr>
                        <th>Height</th>
                        <th>Weight</th>
                        <th>Body fat %</th>
                    </tr>
                    <tr>
                        <td>@bodyStatistic.Height</td>
                        <td>@bodyStatistic.Weight</td>
                        <td>@bodyStatistic.BodyFatPercentage</td>

                    </tr>
                </table>
            </div>
        }

    }
</div>
