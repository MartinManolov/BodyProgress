@model ICollection<MealViewModel>
<div class="container-fluid shadow-lg p-3 mb-5 bg-white rounded">
    <h1 class="text-center">Meals</h1>
    @if (Model.Count == 0)
    {
        <p class="text-center text-info">Doesn't have meals</p>
    }
    else
    {
        @foreach (var meal in Model)
        {
            <div class="shadow-lg p-3 mb-5 bg-white rounded">
                <h4>@meal.Name</h4>
                <p class="text-muted">@meal.Date</p>
                @foreach (var foodQuantity in meal.FoodsMealQuantities)
                {
                    <table class="tab-content shadow-lg p-1 mb-3 bg-white rounded border" style="width: 100%" border="1">
                        <colgroup>
                        </colgroup>
                        <tr>
                            <th>Food</th>
                            <th>Quantity</th>
                            <th>Kcal</th>
                            <th>Carbs</th>
                            <th>Protein</th>
                            <th>Fat</th>
                        </tr>
                        <tr>
                            <td>@foodQuantity.FoodName</td>
                            <td>@foodQuantity.Quantity g</td>
                            <td>@foodQuantity.KcalPer100g kcal</td>
                            <td>@foodQuantity.CarbsPer100g g</td>
                            <td>@foodQuantity.ProteinPer100g g</td>
                            <td>@foodQuantity.FatsPer100g g</td>
                        </tr>
                    </table>

                }
                <p>Total: @meal.KcalPerMeal kcal</p>
                <p>Total carbs: @meal.CarbsPerMeal g</p>
                <p>Total protein: @meal.ProteinPerMeal g</p>
                <p>Total fats: @meal.FatsPerMeal g</p>
            </div>
        }
    }

</div>
